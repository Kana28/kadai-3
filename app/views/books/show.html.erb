<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
　　　<%= attachment_image_tag @book.user, :profile_image, size:"100x100", fallback: "noimage.png"%>
      <table>
        <table class="table table-inverse">
        <tbody>
          <tr></tr>
          <tr>
           <th>name</th>
           <th><%= @book.user.name %></th>
          </tr>
          <tr>
           <th>introduction</th>
           <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div>

       <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog edit"></i>
        <% end %>

        <%= render 'books/list', book: @new_book %>  <!--新規投稿部分-->
      </div>
      </div>
      <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
      <table class="table table-hover table-inverse">

        <tbody>
        <div class="book">
         <tr>
          <td>
           <%= link_to user_path(@book.user.id) do %>
           <%= attachment_image_tag @book.user, :profile_image, size:"40x40", fallback: "noimage.png"%>
           <% end %>
           <br><%= link_to @book.user.name, user_path(@book.user.id) %>
          </td>

          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          <% end %>
         </tr>
        </div>
        </tbody>
      </table>
      </div>
    </div>
  </div>
