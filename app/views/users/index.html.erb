
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, size:"100x100", fallback: "noimage.png"%>
      <table class="table table-inverse">
       <tbody>
          <tr></tr>
          <tr>
           <th>name</th>
           <th><%= current_user.name %></th>
          </tr>
          <tr>
           <th>introduction</th>
           <th><%= current_user.introduction %></th>
          </tr>
       </tbody>
      </table>
      <div>
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog edit"></i>
        <% end %>

        <%= render 'books/list', book: @book %>  <!--新規投稿部分-->
      </div>
      </div>
      <div class="col-md-8 offset-md-1">
            <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th colspan="3"></th>
          </tr>
         </thead>
         <tbody>
          <% @users.each do |user| %>
           <tr>
            <td><%= attachment_image_tag user, :profile_image, size:"40x40", fallback: "noimage.png"%></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user) %></td>
           </tr>
          <% end %>
         </tbody>
        </table>
      </div>
  </div>
</div>

